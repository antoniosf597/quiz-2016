
<table>
	<% var i; for(i=0; i < users.length; i++){ %>
	<tr>

		<td><%= users[i].username %> </td>
<% if (session.user.username == 'admin' || session.user.username == users[i].username){ %>
		<td><a href="/users/<%= users[i].id %>/edit"><button class="edit">Editar </button></a></td>

		<td>
			<form method="post" action="users/<%= users[i].id %>?_method=delete">
		<% if (session.user.username === 'admin'){ %>	
			<button type="submit" class="del" onClick="return confirm('Borrar: <%= users[i].username %>');" >
			Borrar
			</button>
		<% } %>	

			</form>
		</td>
		<% } %>	
	</tr>
	<% } %>
</table>

